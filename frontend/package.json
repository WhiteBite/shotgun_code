{
  "name": "shotgun-frontend",
  "version": "1.0.0",
  "description": "Shotgun - Intelligent Code Generation Tool",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk --inspect --single-thread",
    "memory:profile": "node --inspect-brk --max-old-space-size=8192 ./scripts/memory-profile.js",
    "heap:snapshot": "node --heapsnapshot-signal=SIGUSR2 ./node_modules/.bin/vite dev",
    "analyze:leaks": "npx clinic heapprofiler -- node --max-old-space-size=4096 ./node_modules/.bin/vite dev",
    "lint": "eslint . --ext .vue,.ts,.tsx,.js",
    "lint:fix": "eslint . --ext .vue,.ts,.tsx,.js --fix",
    "lint:unused": "eslint . --ext .vue,.ts --rule 'unused-imports/no-unused-imports: error' --fix",
    "lint:dupl": "jscpd src/",
    "lint:deps": "depcheck"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.3",
    "@formkit/auto-animate": "^0.9.0",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@tanstack/vue-virtual": "^3.13.13",
    "@vueuse/core": "^14.1.0",
    "@vueuse/motion": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "driver.js": "^1.4.0",
    "fuse.js": "^7.1.0",
    "highlight.js": "^11.11.1",
    "lucide-vue-next": "^0.559.0",
    "nanoid": "^5.1.6",
    "pinia": "^3.0.4",
    "reka-ui": "^2.4.1",
    "resize-observer-polyfill": "^1.5.1",
    "shadcn-vue": "^2.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.3.4",
    "vue-router": "^4.5.1",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.10.2",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.14",
    "depcheck": "^1.4.7",
    "eslint": "^9.33.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "jscpd": "^4.0.5",
    "jsdom": "^27.3.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "terser": "^5.44.1",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.8"
  }
}
